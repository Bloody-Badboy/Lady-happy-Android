<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:duration="1500"
            app:touchAnchorId="@+id/recyclerView"
            app:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="1"
                app:motionTarget="@+id/title" />

            <KeyAttribute
                android:alpha="0.5"
                app:framePosition="1"
                app:motionTarget="@+id/titleBold" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@+id/divider">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@+id/the">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/title">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/titleBold">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/openSource">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/andUsesThese">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/contributorInvite">
            <PropertySet android:alpha="1" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@+id/divider">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/the">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/title">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/titleBold">
            <PropertySet android:alpha="1" />

            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_padding_16"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/toolbar" />
        </Constraint>

        <Constraint android:id="@+id/openSource">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/andUsesThese">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/contributorInvite">
            <PropertySet android:alpha="0" />
        </Constraint>

    </ConstraintSet>
</MotionScene>
