        android:id="@android:id/mask"
        android:drawable="@android:color/white">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
