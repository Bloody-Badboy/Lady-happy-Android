<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egoriku.giugi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.egoriku.ladyhappy.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.egoriku.ladyhappy.presentation.ui.activity.MainActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.egoriku.ladyhappy.presentation.ui.activity.CreateNewPostActivity"
            android:label="Order" />

        <activity
            android:name="com.egoriku.ladyhappy.presentation.ui.activity.StartActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="@string/hockey_app_id" />
    </application>
</manifest>
