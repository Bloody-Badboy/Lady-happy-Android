<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Terracota</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/Terracota</item>
        <item name="android:background">@color/RealWhite</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
