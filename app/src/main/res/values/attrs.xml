<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotsView">
        <attr name="colorSelected" format="color" />
        <attr name="colorUnselected" format="color" />
        <attr name="dotSpace" format="dimension" />
        <attr name="dotRadius" format="dimension" />
        <attr name="selectedDotRadius" format="dimension" />
        <attr name="count" format="integer" />
        <attr name="selectedDot" format="integer" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SocialView">
        <attr name="itemPadding" format="dimension" />
    </declare-styleable>
</resources>